from flask import Flask, render_template, request
import random

app = Flask(__name__)

# دالة ذكية لتحديد البرج الفلكي بناءً على التاريخ
def get_zodiac(day, month):
    if (month == 3 and day >= 21) or (month == 4 and day <= 19): return "الحمل"
    if (month == 4 and day >= 20) or (month == 5 and day <= 20): return "الثور"
    if (month == 5 and day >= 21) or (month == 6 and day <= 20): return "الجوزاء"
    if (month == 6 and day >= 21) or (month == 7 and day <= 22): return "السرطان"
    if (month == 7 and day >= 23) or (month == 8 and day <= 22): return "الأسد"
    if (month == 8 and day >= 23) or (month == 9 and day <= 22): return "العذراء"
    if (month == 9 and day >= 23) or (month == 10 and day <= 22): return "الميزان"
    if (month == 10 and day >= 23) or (month == 11 and day <= 21): return "العقرب"
    if (month == 11 and day >= 22) or (month == 12 and day <= 21): return "القوس"
    if (month == 12 and day >= 22) or (month == 1 day <= 19): return "الجدي"
    if (month == 1 and day >= 20) or (month == 2 and day <= 18): return "الدلو"
    return "الحوت"

@app.route('/', methods=['GET', 'POST'])
def home():
    prediction = ""
    zodiac = ""
    if request.method == 'POST':
        # استقبال البيانات من المستخدم
        day = int(request.form.get('day'))
        month = int(request.form.get('month'))
        zodiac = get_zodiac(day, month)
        
        # مجموعة نصائح مهنية وتقنية تليق بطموحك
        tips = [
            "اليوم مثالي لتطوير مهارة تقنية جديدة، العلم هو سلاحك الأقوى.",
            "ثق بقراراتك؛ الشخصية القيادية تبدأ من الإيمان بالذات.",
            "لا تقلق من العقبات الاجتماعية، فالنتائج الملموسة تفرض احترامها على الجميع.",
            "فرصة برمجية أو تقنية في طريقها إليك، كن مستعداً لاقتناصها.",
            "الصبر في إصلاح الأعطال التقنية هو ما يصنع الـ IT Officer المحترف."
        ]
        prediction = random.choice(tips)
        
    return render_template('index.html', prediction=prediction, zodiac=zodiac)

if __name__ == '__main__':
    app.run(debug=True)
